{
    "workbench.colorTheme": "Default Light Modern",
    "editor.tokenColorCustomizations": {

        "[*Light*]": {
            "textMateRules": [
            {
                "name": "Generic text",
                "scope": [
                    "constant",
                    "constant.character",
                    "constant.character.escape",
                    "constant.language",
                    "constant.other.option",
                    "entity",
                    "entity.name",
                    "entity.name.function",
                    "entity.name.namespace",
                    "entity.name.tag",
                    "entity.name.type",
                    "entity.other.attribute-name",
                    "keyword",
                    "keyword.control",
                    "keyword.operator",
                    "keyword.operator.logical",
                    "keyword.operator.logical.python",
                    "meta.function-call.arguments",
                    "punctuation.definition.tag",
                    "source",
                    "storage.modifier",
                    "storage.type",
                    "string",
                    "string.quoted.double.xml",
                    "string.regexp",
                    "support.function",
                    "support.type.property-name.json",
                    "variable",
                    "variable.language",
                    "variable.other.constant"
                ],
                "settings": {
                    "fontStyle": "",
                    "foreground": "#000"        // use simple black text
                }
            },

            {
                "name": "Reset scheme styling",
                "scope": [
                    "invalid.deprecated.shell",
                    "keyword.operator",
                    "meta.function-call.arguments",
                    "meta.function-call punctuation",
                    "meta.function-call string.quoted punctuation.definition",
                    "punctuation.definition.inheritance.begin.python",
                    "punctuation.definition.inheritance.end.python",
                    "punctuation.separator",
                    "punctuation.separator.key-value"
                ],
                "settings": {
                    "fontStyle": ""
                }
            },
            
            {
                "name": "Operators, mostly symbols",
                "scope": [
                    "keyword.operator.arithmetic",
                    "keyword.operator.assignment",
                    "keyword.operator.comparison",
                    "keyword.operator"
                ],
                "settings": {
                    "fontStyle": ""
                }
            },
            {
                "name": "Braces, brackets and parentheses",
                "scope": [
                    "punctuation.definition.arguments",
                    "punctuation.definition.dict",
                    "punctuation.definition.list",
                    "punctuation.definition.parameters",
                    "punctuation.parenthesis"
                ],
                "settings": {
                    "fontStyle": ""
                }
            },
            {
                "name": "Keywords",
                "scope": [
                    "keyword.control",
                    "keyword.operator.logical",
                    "keyword.operator.logical.python",
                    "storage.type",
                    "storage.type.class",
                    "storage.type.function"
                ],
                "settings": {
                    "fontStyle": "bold"
                }
            },
            {
                "name": "Language constants",
                "scope": [
                    "constant.language"
                ],
                "settings": {
                    "fontStyle": "bold"
                }
            },
            {
                "name": "Named constants",
                "scope": [
                    "constant.other",
                    "variable.other.constant"
                ],
                "settings": {
                    "fontStyle": "bold"
                }
            },
            {
                "name": "YAML Anchors",
                "scope": [
                    "entity.name.type.anchor",
                    "variable.other.alias"
                ],
                "settings": {
                    "fontStyle": "bold"
                }
            },
            {
                "name": "Numeric constants",
                "scope": [
                    "constant.numeric"
                ],
                "settings": {
                    "fontStyle": "bold",
                    "foreground": "#ca6510"  // orange-600
                }
            },

            {
                "name": "Interesting single characters",
                "scope": [
                    "keyword.operator.unpacking",
                    "punctuation.separator.continuation",
                    "storage.type.string.python",
                    "punctuation.definition.tag"
                ],
                "settings": {
                    "fontStyle": "bold",
                    "foreground":  "#ca6510"  // orange-600
                }
            },

            {
                "name": "Interesting yaml symbols",
                "scope": [
                    "constant.language.merge",
                    "keyword.control.flow.block-scalar.folded",
                    "punctuation.definition.alias",
                    "punctuation.definition.anchor"
                ],
                "settings": {
                    "fontStyle": "bold",
                    "foreground":  "#ca6510"  // orange-600
                }
            },

{
                "name": "hyperlinks",
                "scope": [
                    "markup.underline.link.hover",
                    "markup.underline.link"
                ],
                "settings": {
                    "fontStyle": "italic",
                    "foreground":  "#ca6510"  // orange-600
                }
            },

            {
                "name": "strings and quotation marks",
                "scope": [
                    "punctuation.definition.string",
                    "punctuation.separator",
                    "punctuation.separator.key-value",
                    "string.quoted",
                    "string.unquoted",
                    "string.quoted.double.xml",
                    "string.quoted.double.yaml",
                    "string.quoted.double.yaml punctuation.definition.string",
                    "string.quoted.single.yaml",
                    "string.quoted.single.yaml punctuation.definition.string"

                ],
                "settings": {
                    "fontStyle": "italic"
                }
            },
            {
                "name": "Regular expressions",
                "scope": [
                    "string.regexp",
                    "meta.function-call.arguments string.regexp"
                ],
                "settings": {
                    "fontStyle": "italic"
                    // "foreground": "#b58900",  // Solarized $yellow
                }
            },
            {
                "name": "Regular expression special characters",
                "scope": [
                    "constant.other.set.regexp",
                    "keyword.operator.quantifier.regexp",
                    "support.other.escape.special.regexp",
                    "support.other.match",
                    "support.other.parenthesis.regexp punctuation.parenthesis",
                ],
                "settings": {
                    "fontStyle": "bold",
                    "foreground":  "#ca6510"  // orange-600
                }
            },

            {
                "name": "docstrings",
                "scope": [
                    "string.quoted.docstring",
                    "string.quoted.docstring punctuation.definition.string"
                ],
                "settings": {
                    "fontStyle": "",
                    "foreground": "#6c757d",  // gray-600
                }
            },
            {
                "name": "comments",
                "scope": [
                    "comment",
                    "punctuation.definition.comment",
                ],
                "settings": {
                    "fontStyle": "italic",
                    "foreground": "#6c757d",  // gray-600
                }
            },
            {
                "name": "TODO's and FIXME's",
                "scope": "keyword.codetag.notation.python",
                "settings": {
                    "fontStyle": "bold"
                }
            },

            {
                "name": "Decorators",
                "scope": [
                    "entity.name.function.decorator",
                    "meta.function.decorator",
                    "meta.preprocessor"
                ],
                "settings": {
                    "fontStyle": "",
                    "foreground":  "#ca6510"  // orange-600
                }
            },
            {
                "name": "Decorator Arguments",
                "scope": [
                    "entity.name.function.decorator.arguments",
                    "meta.function.decorator.arguments",
                    "meta.function.decorator meta.function-call.arguments variable.parameter.function-call",
                    "meta.function.decorator meta.function-call.arguments keyword.operator.assignment",
                    "meta.function.decorator meta.function-call.arguments string.quoted",
                    "meta.function.decorator meta.function-call.arguments string.quoted punctuation.definition.string",
                    "meta.function.decorator meta.function.parameters string.quoted",
                    "meta.function.decorator meta.function.parameters string.quoted punctuation.definition.string",
                ],
                "settings": {
                    "foreground":  "#ca6510",  // orange-600
                }
            },

            {
                "name": "Function calls",
                "scope": [
                    "meta.function-call",
                    "meta.function-call.generic",
                ],
                "settings": {
                    "fontStyle": "bold"
                }
            },

            {
                "name": "Function call arguments",
                "scope": [
                    "meta.function-call meta.function-call.arguments",
                ],
                "settings": {
                    "fontStyle": ""
                }
            },

            {
                "name": "Function definitions",
                "scope": [
                    "entity.name.function",
                    "support.function.magic.python",
                ],
                "settings": {
                    "fontStyle": "bold"
                }
            },
            {
                "name": "Class definitions",
                "scope": [
                    "entity.name.class",
                    "entity.name.type.class",
                ],
                "settings": {
                    "fontStyle": "bold"
                }
            },
        ]
        },
        "[*Dark*]": {
            "textMateRules": [
                {
                    "scope": "ref.matchtext",
                    "settings": {
                        "foreground": "#fff"
                    }
                }
            ]
        }
    },
    "github.copilot.nextEditSuggestions.enabled": true,
    "workbench.colorCustomizations": {

        "activityBarBadge.background": "#025fb8",  // same blue used in VSCode UI
        "activityBarBadge.foreground": "#fff",
        "badge.background": "#025fb8",  // same blue used in VSCode UI
        "badge.foreground": "#fff",

        "debugIcon.breakpointForeground": "#dc3545",  // red-500

        "diffEditor.insertedLineBackground": "#19875430",  // green-500 at 3/16 opacity
        "diffEditor.insertedTextBackground": "#19875480",  // green-500 at 1/2 opacity
        "diffEditor.removedLineBackground": "#dc354530",  // red-500 at 3/16 opacity
        "diffEditor.removedTextBackground": "#dc354580",  // red-500 at 1/2 opacity
        "diffEditor.renderSideBySide": true,

        "editor.findMatchBackground": "#0d6efd30",  // blue-500 at 3/16 opacity
        "editor.findMatchBorder": "#6ea8fe",  // blue-300
        "editor.findMatchForeground": "#0d6efd",  // blue-500
        "editor.findMatchHighlightBackground": "#0d6efd30",  // blue-500 at 3/16 opacity

        "editor.lineHighlightBackground": "#0d6efd20",
        "editor.rangeHighlightBackground": "#0d6efd20",
        "editor.selectionHighlightBackground": "#0d6efd20",  // blue-500 at 1/8 opacity
        "editor.wordHighlightBackground": "#0d6efd20",  // blue-500 at 1/8 opacity
        "editor.wordHighlightStrongBackground": "#0d6efda0",  // blue-500 at 5/8 opacity -- variable definitions

        "editor.inactiveSelectionBackground": "#0d6efd20",  // blue-500 at 1/8 opacity
        "editor.selectionBackground": "#0d6efd40",  // blue-500 at 1/4 opacity

        "editorError.background": "#dc354530",  // red-500 at 3/16 opacity
        "editorError.foreground": "#dc3545",  // red-500
        "list.errorForeground": "#dc3545",
        "editorOverviewRuler.errorForeground": "#dc3545",  // red-500

        "editorWarning.background": "#ffc10760",  // yellow-500 at 3/16 opacity
        "editorWarning.foreground": "#cc9a06",    // yellow-600
        "list.warningForeground": "#ffc107",
        "editorOverviewRuler.warningForeground": "#ffc107",  // yellow-500

        "editorInfo.background": "#19875430",  // green-500 at 3/16 opacity
        "editorInfo.foreground": "#198754", // green-500
        "editorOverviewRuler.infoForeground": "#198754", // green-500

        "editorGhostText.foreground": "#6ea8fe",  // blue-300
        "editorGhostText.background": "#E7F0FF",  // blue-050

        // "errorForeground": "#dc3545",  // red-500

        "editorLineNumber.activeForeground": "#6ea8fe",  // blue-300
        "editorLineNumber.foreground": "#CED4DA",  // gray-400

        "editorRuler.foreground": "#E9ECEF",  // gray-200
        
        "editorCursor.background": "#cfe2ff",  // blue-100
        "editorCursor.foreground": "#0d6efd",  // blue-500

        "editorLink.activeForeground": "#0d6efd",
        // "textLink.foreground": "#0d6efd",  // blue-500
        // "textLink.activeForeground": "#0d6efd",  // blue-500

        "editorGutter.addedBackground": "#198754",  // green-500
        "editorGutter.deletedBackground": "#dc3545",  // red-500
        "editorGutter.modifiedBackground": "#ffc107",  // yellow-500
        "editorOverviewRuler.addedForeground": "#198754",  // green-500
        "editorOverviewRuler.deletedForeground": "#dc3545",  // red-500
        "editorOverviewRuler.findMatchForeground": "#0d6efd80",  // blue-500 at 50% opacity
        "editorOverviewRuler.modifiedForeground": "#ffc107",  // yellow-500

        "gitDecoration.deletedResourceForeground": "#adb5bd",  // gray-500
        "gitDecoration.ignoredResourceForeground": "#adb5bd",  // gray-500
        "gitDecoration.modifiedResourceForeground": "#198754",  // green-500
        "gitDecoration.addedResourceForeground": "#0d6efd",  // blue-500
        "gitDecoration.untrackedResourceForeground": "#0d6efd",  // blue-500
        "gitDecoration.stageDeletedResourceForeground":"#6f42c1",  // purple-500
        "gitDecoration.conflictingResourceForeground": "#dc3545",  // red-500
        "gitDecoration.stageModifiedResourceForeground": "#198754",  // green-500
        "gitDecoration.renamedResourceForeground": "#20c997",  // teal-500
        "gitDecoration.submoduleResourceForeground": "#0aa2c0",  // cyan-600

        "editor.bracketPairColorization.colorizedBracketBorder": true,

        "editorBracketHighlight.foreground1": "#520dc2", // indigo-600 for the first pair of matching braces
        "editorBracketHighlight.foreground2": "#1aa179", // teal-600 for the second pair
        "editorBracketHighlight.foreground3": "#ab296a", // pink-600 for the third pair
        "editorBracketHighlight.unexpectedBracket.foreground": "#dc3545", // red-500 for unexpected brackets
    
        "editorBracketMatch.background": "#cfe2ff80", // blue-100 at 50% opacity
        "editorBracketMatch.border": "#3D8BFD" // blue-400
    },

    // https://github.com/vscode-shellcheck/vscode-shellcheck/issues/192
    "[shellscript]": {
        "editor.showDeprecated": false
    },

    "diffEditor.experimental.showMoves": true,
    "editor.cursorBlinking": "smooth",
    "editor.cursorStyle": "block",
    "editor.detectIndentation": true,
    "editor.find.addExtraSpaceOnTop": false,
    "editor.fontFamily": "Input",
    "editor.fontSize": 12,
    "editor.glyphMargin": false,
    "editor.guides.bracketPairsHorizontal": false,
    "editor.hideCursorInOverviewRuler": false,
    "editor.inlineSuggest.enabled": true,
    "editor.inlineSuggest.syntaxHighlightingEnabled": false,
    "editor.lineHeight": 17,
    "editor.lineNumbers": "interval",
    "editor.linkedEditing": true,
    "editor.minimap.renderCharacters": false,
    "editor.occurrencesHighlight": "multiFile",
    "editor.overtypeCursorStyle": "block-outline",
    "editor.overviewRulerBorder": false,
    "editor.renderLineHighlight": "all",
    "editor.roundedSelection": false,
    "editor.rulers": [72, 80],
    "editor.stickyScroll.enabled": true,
    "editor.stickyScroll.maxLineCount": 10,
    "explorer.decorations.colors": false,
    "window.systemColorTheme": "auto",
    "window.zoomLevel": -1,
    "workbench.editor.decorations.badges": false,
    "workbench.editor.decorations.colors": true,
    "workbench.editor.highlightModifiedTabs": false,
    "workbench.editor.limit.enabled": false,
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.editor.limit.value": 12,
    "workbench.editor.showIcons": false,
    "workbench.editor.tabSizing": "shrink",
    "workbench.fontAliasing": "default",
    "workbench.panel.defaultLocation": "bottom",
    "workbench.sideBar.location": "left",
    "workbench.editor.tabActionCloseVisibility": false
}